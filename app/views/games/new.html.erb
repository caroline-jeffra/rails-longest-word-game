<h1>New game</h1>
<div class="row">
  <div class="letter-grid row">
    <% @letters.each do |letter|  %>
      <div class="col-1 letter-card">
        <%= letter %>
      </div>
    <% end %>
  </div>
</div>
<div class="col-10">
  <h2 class="mt-4 mb-2">What's the longest word you can find?</h2>
  <form action="/score" method="post" data-turbo="false" class="d-flex justify-content-center">
    <input type="text" name="word" class="form form-control mb-3">
    <input type="submit" value="Play" class="btn btn-primary mb-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letter_set, @letters %>
  </form>
</div>
